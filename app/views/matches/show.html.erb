<p id="notice"><%= notice %></p>

<p>
  <b>Season:</b>
  <%= @match.season_id %>
</p>

<p>
  <b>Week:</b>
  <%= @match.week_id %>
</p>

<% if current_user && current_user.has_role(:admin) %>
  <h3>Assign final scores to this match:</h3>

  <%= form_for [current_season, current_week, @match] do |f| %>
    <%= f.label "#{@match.home_team.name} final score: " %>
    <%= f.text_field :home_team_score %>
    <br>
    <%= f.label "#{@match.away_team.name} final score: " %>
    <%= f.text_field :away_team_score %>
    <br>
    <%= f.submit "Submit Score" %>
  <% end %>
<% end %> 

<%= link_to 'Edit', edit_season_week_match_path(@match) %> |
<%= link_to 'Back', season_week_matches_path %>
